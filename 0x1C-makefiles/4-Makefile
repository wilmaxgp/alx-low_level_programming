NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY:	all	clean	fclean	oclean	re

all:	$(NAME)

$(NAME):	$(OBJ)
	$(CC)	$(OBJ)	-o	$(NAME)

%.o:	%.c
	$(CC)	$(CFLAGS)	-c	$<	-o	$@

clean:
	$(RM)	$(OBJ)	*~

oclean:	clean
	$(RM)	$(NAME)

fclean: oclean

re:	fclean	all

