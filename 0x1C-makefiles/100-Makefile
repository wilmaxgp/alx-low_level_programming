CC = gcc
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)
NAME = school
RM = /bin/rm
CFLAGS := -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	@$(RM) -f $(NAME) *~ \#*\#

oclean:
	@$(RM) -f $(OBJ)

fclean: clean oclean

re: fclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

check: check_missing_header

check_missing_header:
ifndef M_H
	$(error m.h is missing)
endif

