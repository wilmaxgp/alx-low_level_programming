CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

SRC := main.c
OBJ := $(SRC:.c=.o)
NAME := school

RM := rm -f

.PHONY: all clean fclean oclean re check_missing_header

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	@$(RM) $(NAME)
	@$(RM) *~ \#*\#

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

check_missing_header:
ifndef M_H
	$(error m.h is missing)
endif

check: check_missing_header

-include $(SRC:.c=.d)
