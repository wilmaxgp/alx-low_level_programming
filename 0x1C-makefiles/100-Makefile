CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c other_file.c
OBJ = $(SRC:.c=.o)
NAME = school
RM := /bin/rm

.PHONY: all clean fclean oclean re check_missing_header

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	@$(RM) -f $(NAME) *~ \#*\#

oclean:
	@$(RM) -f $(OBJ)

fclean: clean oclean

re: fclean all

check_missing_header:
ifndef M_H
	$(error m.h is missing)
endif

check: check_missing_header

-include $(SRC:.c=.d)
