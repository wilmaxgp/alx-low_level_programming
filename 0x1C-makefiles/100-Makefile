CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	@$(RM) -f $(NAME) *~ \#*\#

oclean:
	@$(RM) -f $(OBJ)

fclean: clean oclean

re: fclean all

check: check_missing_header

check_missing_header:
ifndef M_H
	$(error m.h is missing)
endif

