CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	/bin/rm -f $(NAME) *~ \#*\#

oclean:
	/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all

%: %.c
	$(CC) -Wall -Werror -Wextra -pedantic -c $< -o $(<:.c=.o)
	$(CC) $(OBJ) -o $(NAME)

